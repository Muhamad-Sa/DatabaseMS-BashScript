shopt -s extglob
export LC_COLLATE=C

# menu_1
PS3="Enter Your Choice: "
select var in 'Create Database' 'List Databases' 'Connect To Databases' 'Drop Database' 'exit'
do 

case $var in
"exit")	
	break
	;;

"Create Database")
    while true
    do
        read -p "Enter Datbase Name: " DBName
        case $DBName in
        [a-zA-Z][a-zA-Z_]*[a-zA-Z])
            if [[ ! -e $DBName ]]
            then
                mkdir ./$DBName
                echo Database successfully created!
                echo -------------------------------
                break
            else
                echo Database Already Exist!
            fi    
            ;;
        *)
            echo Enter a Valid Name!    
        esac
        
    done 
    ;;  
    
    

"List Databases")
	echo List Databases
	;;

"Connect To Databases")
	echo Connect To Databases
	;;

"Drop Database")
	echo Drop Database
	;;

*)
	echo Enter a Valid Number!
	;;

esac

done 

